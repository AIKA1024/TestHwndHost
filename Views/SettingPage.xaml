<Page x:Class="TestHwndHost.Views.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestHwndHost.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">
  <DockPanel LastChildFill="False" Margin="12">
    <CheckBox IsChecked="{Binding AlwaysOnTop}" DockPanel.Dock="Top" Content="捕获窗口始终在最上层"/>
    <TextBlock DockPanel.Dock="Bottom" Text="某陈:我要把你们这些软件的妈妈全部抓起来"/>
    <TextBlock DockPanel.Dock="Bottom" Text="此软件是免费给曾gg开发的，如果你是购买得来的，请退款"/>
    <TextBlock DockPanel.Dock="Bottom" Text="并不是所有的窗口都可以捕获，uwp和winui3大概率不行"/>
  </DockPanel>
  
</Page>
