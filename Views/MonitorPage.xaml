<Page x:Class="TestHwndHost.Views.MonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestHwndHost.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MonoitorPage">

  <DockPanel Margin="12">
    <Button DockPanel.Dock="Top" HorizontalAlignment="Left" Content="选择监控程序" Width="100" Click="Button_Click"/>
    <ListBox x:Name="ProgramListBox" Margin="0 12 0 0" HorizontalContentAlignment="Stretch">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
            <Image Source="{Binding Icon}"/>
            <TextBlock Margin="8 0 0 0" VerticalAlignment="Center" Text="{Binding Path}"/>
            <DockPanel.ContextMenu>
              <ContextMenu>
                <MenuItem Header="删除" Click="MenuItem_Click"/>
              </ContextMenu>
            </DockPanel.ContextMenu>
          </DockPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </DockPanel>
</Page>
